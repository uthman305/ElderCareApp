@using ElderCareApp.Dto
@model RegisterCareHomeDto

<h2>Register Care Home</h2>

<form asp-action="Register" method="post">

    <div class="form-group mt-2">
        <label>Care Home Name</label>
        <input asp-for="Name" class="form-control" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>

    <div class="form-group mt-2">
        <label>Address</label>
        <input asp-for="Address" class="form-control" />
        <span asp-validation-for="Address" class="text-danger"></span>
    </div>

    <div class="form-group mt-2">
        <label>Bank Name</label>
        <input asp-for="BankName" class="form-control" />
        <span asp-validation-for="BankName" class="text-danger"></span>
    </div>

    <div class="form-group mt-2">
        <label>Account Number</label>
        <input asp-for="AccountNumber" class="form-control" />
        <span asp-validation-for="AccountNumber" class="text-danger"></span>
    </div>

    <hr />

    <h5>Manager Information</h5>

    <div class="form-group mt-2">
        <label>Manager Name</label>
        <input asp-for="ManagerName" class="form-control" />
        <span asp-validation-for="ManagerName" class="text-danger"></span>
    </div>

    <div class="form-group mt-2">
        <label>Manager Email</label>
        <input asp-for="ManagerEmail" class="form-control" type="email" />
        <span asp-validation-for="ManagerEmail" class="text-danger"></span>
    </div>

    <div class="form-group mt-2">
        <label>Password</label>
        <input asp-for="Password" class="form-control" type="password" />
    </div>

    <button class="btn btn-primary mt-3">
        Register Care Home
    </button>

</form>
