@model IEnumerable<ElderCareApp.Models.Elder>

@{
    ViewData["Title"] = "Manager Dashboard";
}

<h2>Manager Dashboard</h2>

<p>
    <a asp-action="CreateStaff" class="btn btn-primary">Create Staff</a>
</p>

<table class="table table-bordered">
    <thead>
        <tr>
            <th>Name</th>
            <th>Age</th>
            <th>Action</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var elder in Model)
        {
            <tr>
                <td>@elder.FullName</td>
                <td>@elder.Age</td>
                <td>
                    <a asp-controller="Staff" asp-action="AddHealth" asp-route-elderId="@elder.Id"
                       class="btn btn-success">Add Health</a>
                    <a asp-action="RemoveElder" asp-route-id="@elder.Id" class="btn btn-danger">Remove</a>
                </td>
                <td>
                    <a asp-controller="Manager"       asp-action="ViewHealth" asp-route-elderId="@elder.Id"
                           class="btn btn-info btn-sm">
                        View Health
                    </a>

                </td>
            </tr>
        }
    </tbody>
</table>