@model IEnumerable<Elder>

<h2>Manager Dashboard</h2>

<a asp-controller="Elder"
   asp-action="Enroll"
   class="btn btn-success mb-3">
    Enroll New Elder
</a>

<table class="table table-bordered">
    <thead>
        <tr>
            <th>Full Name</th>
            <th>Age</th>
            <th>Action</th>
        </tr>
    </thead>
    <tbody>
    @foreach (var elder in Model)
    {
        <tr>
            <td>@elder.FullName</td>
            <td>@elder.Age</td>
            <td>
                <a asp-action="RemoveElder"
                   asp-route-id="@elder.Id"
                   class="btn btn-danger btn-sm">
                    Remove
                </a>
            </td>
        </tr>
    }
    </tbody>
</table>
