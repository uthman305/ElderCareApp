@model IEnumerable<ElderCareApp.Models.ElderHealthRecord>

<h2>Health Records</h2>

@if (!Model.Any())
{
    <div class="alert alert-info">
        No health records available for this elder.
    </div>
}
else
{
    <table class="table table-bordered table-striped">
        <thead>
            <tr>
                <th>Date</th>
                <th>Blood Pressure</th>
                <th>Heart Rate</th>
                <th>Notes</th>
                <th>Recorded By</th>
            </tr>
        </thead>
        <tbody>
        @foreach (var record in Model)
        {
            <tr>
                <td>@record.DateRecorded.ToString("dd MMM yyyy")</td>
                <td>@record.BloodPressure</td>
                <td>@record.HeartRate</td>
                <td>@record.Notes</td>
                <td>@record.Staff?.FullName</td>
            </tr>
        }
        </tbody>
    </table>
}
