@using Microsoft.AspNetCore.Http

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <title>@ViewData["Title"] - Elder Care App</title>

    <meta name="viewport" content="width=device-width, initial-scale=1" />

    <link rel="stylesheet"
          href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" />
</head>
<body>

    <!-- NAVBAR -->
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
        <div class="container">

            <!-- Brand -->
            <a class="navbar-brand fw-bold"
               asp-controller="CareHome"
               asp-action="Index">
                ElderCare
            </a>

            <!-- Toggle button (mobile) -->
            <button class="navbar-toggler"
                    type="button"
                    data-bs-toggle="collapse"
                    data-bs-target="#mainNavbar">
                <span class="navbar-toggler-icon"></span>
            </button>

            <!-- Navbar content -->
            <div class="collapse navbar-collapse" id="mainNavbar">

                <!-- LEFT: Public Links -->
                <ul class="navbar-nav me-auto mb-2 mb-lg-0">

                    <li class="nav-item">
                        <a class="nav-link"
                           asp-controller="CareHome"
                           asp-action="Index">
                            Care Homes
                        </a>
                    </li>

                    <li class="nav-item">
                        <a class="nav-link"
                           asp-controller="CareHome"
                           asp-action="Register">
                            Register Care Home
                        </a>
                    </li>

                    <li class="nav-item">
                        <a class="nav-link"
                           asp-controller="Elder"
                           asp-action="Enroll">
                            Enroll Elder
                        </a>
                    </li>

                </ul>

                <!-- RIGHT: Manager Auth -->
                <ul class="navbar-nav ms-auto">

                    @if (Context.Session.GetInt32("CareHomeId") == null)
                    {
                        <li class="nav-item">
                            <a class="nav-link text-warning"
                               asp-controller="Account"
                               asp-action="Login">
                                Manager Login
                            </a>
                        </li>
                    }
                    else
                    {
                        <li class="nav-item">
                            <span class="nav-link text-success fw-semibold">
                                @Context.Session.GetString("ManagerName")
                            </span>
                        </li>

                        <li class="nav-item">
                            <a class="nav-link"
                               asp-controller="Manager"
                               asp-action="Dashboard">
                                Dashboard
                            </a>
                        </li>

                        <li class="nav-item">
                            <a class="nav-link text-danger"
                               asp-controller="Account"
                               asp-action="Logout">
                                Logout
                            </a>
                        </li>
                    }

                </ul>

            </div>
        </div>
    </nav>

    <!-- PAGE CONTENT -->
    <main class="container mt-4">
        @RenderBody()
    </main>

    <!-- FOOTER -->
    <footer class="bg-light text-center p-3 mt-5 border-top">
        <small class="text-muted">
            &copy; @DateTime.Now.Year - Elder Care App
        </small>
    </footer>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
